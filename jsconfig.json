{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "node16",
    "lib": ["es2023"],
    "jsx": "react-jsx",
    

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "allowJs": true,
    "checkJs": true,
    "strict": true
  },
  "include": ["src/**/*", "@types/**/*", "**/*.js"]
}
